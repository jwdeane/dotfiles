# alias mgmt
alias ealias="$EDITOR $CHEZMOI_SOURCE_DIR/dot_zsh_aliases"
alias salias="chezmoi apply $HOME/.zsh_aliases && source $HOME/.zsh_aliases && echo 'zsh_aliases reloaded'"
